  <!-- This prevents a flash of content unstyled by css and javascript during page initialization by
       associating a classname with a root (html) element before the body element is reached -->
  <style type="text/css">	
      .js #About {display: none;}
      .js #Vitae {display: none;}
      .js #Research{display: none;}
      .js #Teaching{display: none;}
  </style>
   <script type="text/javascript">
      document.documentElement.className = 'js';
   </script>
 